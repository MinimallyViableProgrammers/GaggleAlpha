<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/rebecca_purple"
    android:orientation="vertical"
    tools:context=".activity.DisplayPartyActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@android:color/white"
        android:background="@color/slate_grey">
    </android.support.v7.widget.Toolbar>
    <ImageView
        android:id="@+id/partyImageDisplay"
        android:layout_width="wrap_content"
        android:layout_height="130dp" />
    <TextView
        android:id="@+id/partyNameDisplay"
        android:layout_width="match_parent"
        android:layout_height="16dp" />
    <TextView
        android:id="@+id/partyDescriptionDisplay"
        android:layout_width="match_parent"
        android:layout_height="16dp" />

</LinearLayout>
